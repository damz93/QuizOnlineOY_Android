<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:alpha="0.7"
    android:orientation="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#4e4503"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/logo_fix2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Question-"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_ke_pert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="italic|bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_layout_container"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/btn_kuning"
            android:columnCount="1" >

                <TextView
                    android:id="@+id/tx_pertanyaan"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#040221"
                    android:layout_marginLeft="5sp"
                    android:textSize="15sp"
                    android:text="Pertanyaan-pertanyaan"/>
                    <RadioGroup
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:id="@+id/rdgrp_jwban">
                        <RadioButton
                            android:layout_marginLeft="20dp"
                            android:textSize="13sp"
                            android:textColor="#040221"
                            android:id="@+id/jawaban1"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:text="Jawaban 1"
                            android:layout_marginStart="20dp" />
                        <RadioButton
                            android:layout_marginLeft="20dp"
                            android:textSize="13sp"
                            android:textColor="#040221"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:id="@+id/jawaban2"
                            android:text="Jawaban 2"
                            android:layout_marginStart="20dp" />
                        <RadioButton
                            android:layout_marginLeft="20dp"
                            android:textSize="13sp"
                            android:textColor="#040221"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:id="@+id/jawaban3"
                            android:text="Jawaban 3"
                            android:layout_marginStart="20dp" />
                        <RadioButton
                            android:layout_marginLeft="20dp"
                            android:textSize="13sp"
                            android:textColor="#040221"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:id="@+id/jawaban4"
                            android:text="Jawaban 4"
                            android:layout_marginStart="20dp" />
                        <RadioButton
                            android:layout_marginLeft="20dp"
                            android:textSize="13sp"
                            android:textColor="#040221"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:id="@+id/jawaban5"
                            android:text="Jawaban 5"
                            android:layout_marginStart="20dp" />
                        <RadioButton
                            android:layout_marginLeft="20dp"
                            android:textSize="13sp"
                            android:textColor="#040221"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:id="@+id/jawaban6"
                            android:text="Jawaban 6"
                            android:visibility="gone"
                            android:layout_marginStart="20dp" />
                        <RadioButton
                            android:layout_marginLeft="20dp"
                            android:textSize="13sp"
                            android:textColor="#040221"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:id="@+id/jawaban7"
                            android:text="Jawaban 7"
                            android:visibility="gone"
                            android:layout_marginStart="20dp" />
                        <RadioButton
                            android:layout_marginLeft="20dp"
                            android:textSize="13sp"
                            android:textColor="#040221"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:visibility="gone"
                            android:id="@+id/jawaban8"
                            android:text="Jawaban 8"
                            android:layout_marginStart="20dp" />
                    </RadioGroup>
            <TextView
                android:id="@+id/text_view_answer"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
